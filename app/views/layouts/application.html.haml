!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title MyBlog
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.navbar.navbar-expand-lg.navbar-light.bg-light
      %a.navbar-brand{ href: '#' } Navbar
      %button.navbar-toggler{'aria-controls': 'navbarTogglerDemo02',
                             'aria-expanded': 'false',
                             'aria-label': 'Toggle navigation',
                             'data-target': '#navbarTogglerDemo02',
                             'data-toggle': 'collapse',
                             type: 'button' }
        %span.navbar-toggler-icon
      #navbarTogglerDemo02.collapse.navbar-collapse
        %ul.navbar-nav.mr-auto.mt-2.mt-lg-0
          %li.nav-item.active
            = link_to 'Home', posts_path, class: 'nav-link'
          %li.nav-item
            %a.nav-link{ href: new_post_path } New Post

        %form.form-inline.my-2.my-lg-0
          %input.form-control.mr-sm-2{ placeholder: 'Search',
                                       type: 'search' }/
          %button.btn.btn-outline-success.my-2.my-sm-0{ type: 'submit' } Search

    = yield
